/* pages/loves/setting/setting.wxss */
page {
  padding-bottom: 50rpx;
  background: #ffffff;
}


.user_against{
  display: flex;
  justify-content: space-between;
  align-items: flex-end;
}

.header {
  padding: 0 25rpx;
  padding-top: 40rpx;
  padding-bottom: 50rpx;
  width: 100%;
  background: rgba(252,157,154,1);
  position:relative;
}

.user {
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.header .gif-wave{
  position: absolute;
  width: 100%;
  bottom: 0;
  left: 0;
  z-index: 99;
  mix-blend-mode: screen;  
  height: 100rpx;   
}
.user_box {
  display: flex;
  align-items: center;
}

.edit {
  display: flex;
  width: 70rpx;
  height: 70rpx;
  padding: 18rpx;
  box-sizing: border-box;
}

.edit image {
  width: 100%;
  height: 100%;
  transform: rotate(180deg);
}

.logo {
  width: 150rpx;
  height: 150rpx;
  border-radius: 50%;
  background: #fff;
  will-change: transform;
  position:relative;
}

.logo image {
  width: 100%;
  height: 100%;
}

.logo image {
  width: 100%;
  height: 100%;
  border-radius: 100%;
  will-change: transform;
}

.user_info {
  padding-left: 32rpx;
}

.user_name {
  display: flex;
  align-items: center;
  font-size: 36rpx;
  font-weight: bold;
  color: #fff;
}



.user_name image {
  margin-left: 16rpx;
  width: 84rpx;
  height: 31rpx;
}







.section{
  background:#f3f1f3;
  margin:20rpx;
  padding:20rpx

}
.input{



  border-radius:4rpx; 
  /* 设置输入框的圆角的大小 */

  border:1rpx solid #c8cccf;
  /* 设置输入框边框的粗细和颜色 */

  color:#986655; 
  /* 设置输入框中文字的颜色 */

  outline:0; 
  /* 将输入框点击的时候出现的边框去掉 */

  text-align:left; 
  /* 设置输入框中文字的位置 */

  padding-left: 10rpx;

  display:block; 
  /* 将输入框设置为块级元素 */
  margin:20rpx;
  padding:20rpx;

